<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_venue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wit.venues.views.venue.VenueView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fitsSystemWindows="true"
                app:elevation="0dip"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleTextColor="@color/colorPrimary" />


            </com.google.android.material.appbar.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/appBarLayout"
                android:layout_marginBottom="55dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTitle"
                        android:text="@string/hint_venueName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/venueName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="8dp"
                        android:autofillHints=""
                        android:hint="@string/hint_venueName"
                        android:inputType="text"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/descriptionTitle"
                        android:text="@string/hint_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="18sp" />



                    <EditText
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:autofillHints=""
                        android:hint="@string/hint_description"
                        android:inputType="textMultiLine"
                        android:maxLength="2500"
                        android:maxLines="10"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:scrollbars="vertical"/>

                    <TextView
                        android:id="@+id/venueNotes"
                        android:text="@string/hint_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:autofillHints=""
                        android:hint="@string/hint_notes"
                        android:inputType="textMultiLine"
                        android:maxLength="2500"
                        android:maxLines="10"
                        android:padding="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:scrollbars="vertical"/>



                    <Switch
                        android:id="@+id/button_visited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:splitTrack="true"
                        android:text="Visited"
                        android:textSize="18sp"
                        android:showText="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textOff="No"
                        android:textOn="Yes"
                        android:switchTextAppearance="@style/MySwitchStyle"

                        />

                    <TextView
                        android:id="@+id/date_title"
                        android:text="@string/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:visibility="gone"/>

                    <DatePicker
                        android:id="@+id/date_visited"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"
                        android:visibility="gone"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_height="wrap_content">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/ratingText"
                            android:numStars="5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ratingText"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/rating"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintEnd_toStartOf="@+id/ratingBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <Switch
                        android:id="@+id/button_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:splitTrack="true"
                        android:text="@string/fav_name"
                        android:textSize="18sp"
                        android:showText="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textOff="No"
                        android:textOn="Yes"
                        android:switchTextAppearance="@style/MySwitchStyle"
                        />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="wrap_content"
                        android:layout_height="162dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="32dp"
                        android:layout_gravity="bottom|center_horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/button_fav" />


                    <ImageView
                        android:id="@+id/venueImage"
                        android:layout_width="300dp"
                        android:layout_height="400px"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:id="@+id/chooseImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/button_addImage"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>


                    <ImageView
                        android:id="@+id/venueImage2"
                        android:layout_width="300dp"
                        android:layout_height="400px"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:id="@+id/chooseImage2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/button_addImage2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>



                    <ImageView
                        android:id="@+id/venueImage3"
                        android:layout_width="300dp"
                        android:layout_height="400px"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_centerHorizontal="true"
                        />

                    <Button
                        android:id="@+id/chooseImage3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/button_addImage3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>


                    <ImageView
                        android:id="@+id/venueImage4"
                        android:layout_width="300dp"
                        android:layout_height="400px"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:id="@+id/chooseImage4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/button_addImage4"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>


                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@color/colorAccent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:stateListAnimator="@null"
                        android:text="@string/button_addVenue"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />


                </LinearLayout>
            </ScrollView>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:labelVisibilityMode="labeled"
                app:itemIconTint="@android:color/white"
                app:itemTextColor="@android:color/white"
                app:menu="@menu/bottom_navigation_menu" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_venue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>